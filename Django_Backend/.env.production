# Production Django Environment Variables
SECRET_KEY=your-very-secure-production-secret-key
DEBUG=False

# Database Settings
DB_ENGINE=django.db.backends.postgresql
DB_NAME=cert_db
DB_USER=cert_user
DB_PASSWORD=secure_password
DB_HOST=your-db-host
DB_PORT=5432

# Blockchain Settings
BLOCKCHAIN_URL=https://mainnet.infura.io/v3/your-project-id
CONTRACT_ADDRESS=0x123...  # Production contract address
BLOCKCHAIN_NETWORK_ID=1

# CORS Settings
CORS_ORIGIN=https://yourcertificateapp.com

# File Upload Settings
MAX_UPLOAD_SIZE=5242880
ALLOWED_FILE_TYPES=.pdf

# Admin Settings
ADMIN_EMAIL=admin@yourcertificateapp.com

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True